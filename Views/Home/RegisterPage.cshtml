<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.13.0/css/all.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.13.0/css/v4-shims.css">
    <link rel="stylesheet" href="/css/login.css">
    <title>Register</title>

</head>

<body>
    @model User
    <div class="wrapper">

        <partial name="NavbarPartial"></partial>
        
        <div class="registerForm form d-flex" style="justify-content:space-evenly" style="width: 25vw;">
            <form class="registerFormClass" action="/register-process" method="post">
                <h2 style="text-align:center">Register</h2>
                <div class="form-group row">
                    <label asp-for="FirstName" class="form-label"></label>
                    <span asp-validation-for="FirstName" class="text-warning"></span>
                    <input asp-for="FirstName" class="form-control"></label>
                </div>
                <div class="form-group row">
                    <label asp-for="LastName" class="form-label"></label>
                    <span asp-validation-for="LastName" class="text-warning"></span>
                    <input asp-for="LastName" class="form-control"></label>
                </div>
                <div class="form-group row">
                    <label asp-for="Email" class="form-label"></label>
                    <span asp-validation-for="Email" class="text-warning"></span>
                    <input asp-for="Email" class="form-control"></label>
                </div>
                <div class="form-group row">
                    <label asp-for="Password" class="form-label"></label>
                    <span asp-validation-for="Password" class="text-warning"></span>
                    <input asp-for="Password" class="form-control"></label>
                </div>
                <div class="form-group row">
                    <label asp-for="Confirm" class="form-label"></label>
                    <span asp-validation-for="Confirm" class="text-warning"></span>
                    <input asp-for="Confirm" class="form-control"></label>
                </div>
                <div class="col text-center">
                    <button class="btn btn-danger">Register</button>
                </div>

            </form>
        </div>

    </div>
</body>

</html>
